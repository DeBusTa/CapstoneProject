<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDesainFragment">

    <LinearLayout
        android:id="@+id/ll_konveksiInfo"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_konveksiphoto"
            android:layout_width="110dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_namakonveksi"
            android:layout_width="match_parent"
            android:layout_height="54dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_listpilihan"
        android:layout_width="403dp"
        android:layout_height="535dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_konveksiInfo"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_listdesain"
        />

    <TextView
        android:id="@+id/tv_terpilih"
        android:layout_width="214dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_listpilihan"
        app:layout_constraintVertical_bias="0.542"
        android:text="xxx Desain Terpilih"
        />

    <Button
        android:id="@+id/but_next"
        android:layout_width="140dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_listpilihan"
        app:layout_constraintVertical_bias="0.431"
        android:text="Next"/>

</androidx.constraintlayout.widget.ConstraintLayout>